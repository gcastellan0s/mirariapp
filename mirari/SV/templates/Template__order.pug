-load static
-load i18n

// Layout wrapper
.layout-wrapper.layout-1
    .layout-inner
        // Layout container
        .layout-container
            // Layout content
            .layout-content
                // Content
                .container-fluid.flex-grow-1.container-p-y
                    .container-p-x.py-5.container-m--x.container-m--y.mb-0(style="max-height:91vh")
                        .row
                            
                            .col-12
                                .card-body
                                    label.form-label SELECCIONA UN CLIENTE
                                    input#typeahead-input.form-control(type="text" autocomplete="off" v-model="Client" v-on:click="Client=''")
                            .col-4
                                .card.bg-primary.border-0.text-white.mb-4
                                    .card-body.d-flex.justify-content-between.align-items-center.py-4
                                        div
                                            .text-xlarge LEVANTAR PEDIDO
                                            .small.opacity-75 ELIGE UN CLIENTE PARA LA VENTA
                                        i.fas.fa-user-tag.text-xlarge.opacity-25
                            //
                                .col-4
                                    .card.bg-primary.border-0.text-white.mb-4
                                        .card-body.d-flex.justify-content-between.align-items-center.py-4
                                            div
                                                .text-xlarge SALDO
                                                .small.opacity-75 CORTE Z EN ${Sellpoint.name}
                                            i.fas.fa-cut.text-xlarge.opacity-25
                                .col-4
                                    .card.bg-primary.border-0.text-white.mb-4
                                        .card-body.d-flex.justify-content-between.align-items-center.py-4
                                            div
                                                .text-xlarge DEVOLUCION
                                                .small.opacity-75 CORTE Z EN ${Sellpoint.name}
                                            i.fas.fa-cut.text-xlarge.opacity-25
                // Layout footer
                nav.layout-footer.footer.bg-footer-theme
                    .container-fluid.d-flex.flex-wrap.justify-content-between.text-center.container-p-x.pb-3
                        .pt-3
                            span.footer-text.font-weight-bolder.px-3.h4 
                                span
                        include Component__footer_links.pug

